<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dip"
    >
    <ImageView
        android:id="@+id/image_priority_list"
        android:layout_width="@dimen/task_priority_image_size"
        android:layout_height="@dimen/task_priority_image_size"
       />
    <TextView
        android:layout_toRightOf="@id/image_priority_list"
        android:padding="3dip"
        android:layout_marginTop="2dip"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/title_priority_list"
        android:layout_marginLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@id/image_priority_list"
        android:padding="2dip"
        android:textColor="@color/darkgrey"
        android:layout_marginLeft="5dip"
        android:id="@+id/description_priority_list"
        android:layout_below="@+id/title_priority_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>